[Unit]
Description=OpenAI Local Proxy Service
After=network.target
Documentation=https://github.com/St5mesh/text-rpg-adventure

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/openai-local-proxy
Environment="PATH=/usr/local/bin:/usr/bin:/bin"
Environment="PYTHONUNBUFFERED=1"

# Main service
ExecStart=/usr/bin/python3 /opt/openai-local-proxy/proxy_server.py

# Restart policy
Restart=always
RestartSec=10

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/openai-local-proxy

# Resource limits
LimitNOFILE=65536
TimeoutStopSec=30

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=openai-proxy

[Install]
WantedBy=multi-user.target
